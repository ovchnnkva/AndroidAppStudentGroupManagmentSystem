<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <!-- View background color -->
    <solid
        android:color="@color/blue_3">

    </solid>

    <!-- View border color and width -->
    <stroke
        android:width="2dp"
        android:color="@color/blue_3"
        >
    </stroke>

    <!-- The radius makes the corners rounded -->
    <corners
        android:radius="50dp"   >
    </corners>
    <size
        android:height="5dp"
        android:width="5dp">
    </size>
    <padding
        android:left="1dp"
        android:right="1dp"
        android:bottom="1dp"
        android:top="1dp" />

</shape>